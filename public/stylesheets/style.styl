@import 'nib'
//see https://github.com/visionmedia/nib/tree/master/lib/nib

@import 'mymixins'

html
	background $WHITE
	
body
	font 12px 'lucida grande', tahoma, verdana, arial, sans-serif
	margin 0
	padding 0
	background $WHITE
	min-width 760px
	width 100%
	min-height 100%
	color $BLACK

h1,h2,h3,h4
	padding 0
	margin 0
	font-weight bold
	
h1
	font-size 35px
	color $ACCENT1_COLOR
h2
	font-size 25px
	color $ACCENT2_COLOR
h3
	font-size 20px
	font-weight normal
	color $ACCENT3_COLOR
h4
	font-size 15px
	color $SECONDARY_COLOR
	font-weight normal
	font-style italic

a
	color $ACCENT4_COLOR


.meta
	background-color #FFFFdd
	border 4px solid #DDDDAA
	padding 8px
	
	h2
		color #000000
		font-style italic
		
.result
	width 49%
	float left